<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TraitementActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="331dp"
        android:layout_height="242dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imglecturecancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgLecture"
            android:layout_alignStart="@+id/imgLecture"
            android:layout_alignTop="@+id/imgLecture"
            android:visibility="invisible"
            app:srcCompat="@drawable/dialog_cancel" />

        <TextView
            android:id="@+id/txttraitementphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtlectureinfos"
            android:layout_alignStart="@+id/txtlectureinfos"
            android:layout_alignTop="@+id/imgphoto"
            android:enabled="false"
            android:text="@string/read_photo"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/progressaccess"
            tools:layout_editor_absoluteY="132dp" />

        <ImageView
            android:id="@+id/imgphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/progressphoto"
            android:layout_alignRight="@+id/progressphoto"
            android:layout_alignTop="@+id/progressphoto"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/yes" />

        <ProgressBar
            android:id="@+id/progressphoto"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/progresslecture"
            android:layout_alignStart="@+id/progresslecture"
            android:layout_below="@+id/progresslecture"
            android:layout_marginTop="19dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="149dp" />

        <TextView
            android:id="@+id/txtlectureinfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgLecture"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:enabled="false"
            android:text="@string/read_infos"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/progressaccess"
            tools:layout_editor_absoluteY="132dp" />

        <ImageView
            android:id="@+id/imgaccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/progressaccess"
            android:layout_alignRight="@+id/progressaccess"
            android:layout_alignTop="@+id/textView"
            android:visibility="invisible"
            app:srcCompat="@drawable/yes" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressaccess"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imgaccess"
            android:layout_toRightOf="@+id/imgaccess"
            android:text="@string/access_data"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/progressaccess"
            tools:layout_editor_absoluteY="132dp" />

        <ProgressBar
            android:id="@+id/progressaccess"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="149dp" />

        <ProgressBar
            android:id="@+id/progresslecture"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/progressaccess"
            android:layout_alignStart="@+id/progressaccess"
            android:layout_below="@+id/progressaccess"
            android:layout_marginTop="26dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="149dp" />

        <ImageView
            android:id="@+id/imgLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressphoto"
            android:layout_alignEnd="@+id/progresslecture"
            android:layout_alignRight="@+id/progresslecture"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/yes" />

        <ImageView
            android:id="@+id/imgphotocancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgphoto"
            android:layout_alignStart="@+id/imgphoto"
            android:layout_alignTop="@+id/imgphoto"
            android:visibility="invisible"
            app:srcCompat="@drawable/dialog_cancel" />

        <ImageView
            android:id="@+id/imgaccesscancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgaccess"
            android:layout_alignStart="@+id/imgaccess"
            android:layout_alignTop="@+id/imgaccess"
            android:visibility="invisible"
            app:srcCompat="@drawable/dialog_cancel" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>